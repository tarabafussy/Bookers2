<%= render 'users/header' %>
<%= render 'users/side-bar', book: @book %>
<h1>Users</h1>
<table class="user-list">
	<tr>
		<th class="list-title">image</th>
		<th class="list-title">name</th>
		<th class="list-title"></th>
	</tr>
	<% @users.each do |user| %>
		<tr>
			<th class="list-text"><%= attachment_image_tag user, :profile_image, :fill, 100, 100 %></th>
			<th class="list-text"><%= user.name %></th>
			<th class="list-text"><%= link_to "Show", user_path(user) %></th>
		</tr>
	<% end %>
</table>
