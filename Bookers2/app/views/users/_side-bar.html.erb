<h1>User info</h1>
<th class="list-text"><%= attachment_image_tag @user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg" %></th>
<table class="table table-striped">
	<tr>
		<th class="side-title">name</th>
		<th class="side-text"><%= @user.name %></th>
	</tr>
	<tr>
		<th class="side-title">introduction</th>
		<th class="side-text"><%= @user.introduction %></th>
	</tr>
</table>

<%= link_to edit_user_path(@user) do %>
	<button type="button" class="btn btn-outline-secondary btn-block"><span class="glyphicon glyphicon-wrench" aria-hidden="true"></span></button>
<% end %>

<h1>New book</h1>
<%= form_for(@book) do |f| %>
	<div class="form-group">
		<%= f.label "Title" %>
		<br>
		<%= f.text_field :title %>
	</div>
	<div class="form-group">
		<%= f.label "Opinion" %>
		<br>
		<%= f.text_area :body %>
	</div>
	<div class="form-group">
		<%= f.submit "Create Book", class:"btn btn-primary btn-block"%>
	</div>
<% end %>