<%= render 'users/header' %>
<div class="container">
	<div class="row">
		<div class="col-md-6 col-md-offset-3">
			<h1>Editing Book</h1>
			<%= form_for(@book) do |f| %>
				<div class="form-group">
					<%= f.label "Title" %>
					<br>
					<%= f.text_field :title %>
				</div>
			<div class="form-group">
				<%= f.label "Body" %>
				<br>
				<%= f.text_area :body %>
			</div>
			<%= f.submit "Update Book" %>
			<% end %>
		</div>
	</div>
</div>
<%= render 'users/copyright' %>