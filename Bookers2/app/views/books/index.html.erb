<%= render 'users/header' %>
<div class="container">
	<div class="row">
		<div class="col-lg-3">
			<%= render 'users/side-bar', book: @book %>
		</div>
		<div class="col-lg-9">
			<h1>Books</h1>
			<table class="table table-striped">
				<tr>
					<th class="list-title"></th>
					<th class="list-title">Title</th>
					<th class="list-title">Opinion</th>
				</tr>
				<% @books.each do |book| %>
					<tr>
						<th class="list-text">
							<%= link_to user_path(book.user) do %>
								<%= attachment_image_tag book.user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg", size:'40x40' %>
							<% end %>
						</th>
						<th class="list-text">
							<%= link_to  book_path(book) do %>
								<%= book.title %>
							<% end %>
						</th>
						<th class="list-text"><%= book.body %></th>
					</tr>
				<% end %>
			</table>
		</div>
	</div>
</div>
