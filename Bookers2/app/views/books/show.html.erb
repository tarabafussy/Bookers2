<% if flash[:mess] %>
	<p><%= flash[:mess] %></p>
<% end %>

<%= render 'users/header', user: @book_detail.user %>
<div class="container">
	<div class="row">
		<div class="col-lg-3">
			<%= render 'users/side-bar' %>
		</div>
		<div class="col-lg-9">
			<h1>Book detail</h1>
			<table class="table table-striped">
				<tr>
					<th class="list-text">
						<%= link_to user_path(@book_detail.user) do %>
						<%= attachment_image_tag @book_detail.user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg", size:'40x40' %>
						<br>
						<%= @book_detail.user.name %>
						<% end %>
					</th>
					<th class="list-text">
						<%= link_to  book_path(@book_detail) do %>
						<%= @book_detail.title %>
						<% end %>
					</th>
					<th class="list-text"><%= @book_detail.body %></th>
					<% if @book_detail.user == current_user %>
					<th class="list-edit">
						<%= link_to "Edit", edit_book_path %>
					</th>
					<th class="list-destroy">
						<%= link_to "Destroy", book_path(@book_detail), method: :delete %>
					</th>
					<% end %>
				</tr>
			</table>
		</div>
	</div>
</div>