<%= render 'users/header' %>
<%= render 'users/side-bar' %>
<h1>Book detail</h1>
<table>
	<tr>
		<th class="list-text"><%= attachment_image_tag @book_detail.user, :profile_image, :fill, 100, 100 %></th>
		<th class="list-text"><%= @book_detail.title %></th>
		<th class="list-text"><%= @book_detail.body %></th>
	</tr>
</table>
<%= link_to "Edit", edit_book_path %>
<%= link_to "Destroy", book_path(@book_detail), method: :delete %>